<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_cream_bg"
        tools:context=".view.MainActivity"
        android:id="@+id/parent_view">
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="@+id/swipe_container"
            app:layout_constraintBottom_toBottomOf="@+id/swipe_container"
            android:layout_marginTop="@dimen/app_margin"
            app:layout_constraintTop_toTopOf="@+id/swipe_container"
            app:layout_constraintStart_toStartOf="@+id/swipe_container"
            android:elevation="@dimen/progress_elevation"
            android:layout_marginEnd="@dimen/app_margin" android:layout_marginRight="@dimen/app_margin"/>
    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipe_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="@dimen/app_margin" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">
        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:background="@color/color_cream_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/list_item">
        </android.support.v7.widget.RecyclerView>
    </android.support.v4.widget.SwipeRefreshLayout>
</android.support.constraint.ConstraintLayout>